    "modules" : [
        {
            "name" : "tkmviewer",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "tag": "v1.0.0",
                    "commit": "d03093785ade34389b63622335f4193327ed4e4c",
                    "url" : "https://gitlab.com/taskmonitor/tkmviewer.git"
                }
            ]
        }
    ]
}
